<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingOptionsActivity">

    <Button
        android:id="@+id/button_invite_members_to_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_invite_members_to_meeting"
        app:layout_constraintBottom_toTopOf="@+id/button_invite_groups_to_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_invite_groups_to_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_groyps_to_meeting"
        app:layout_constraintBottom_toTopOf="@+id/button_view_meeting_availability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_invite_members_to_meeting" />

    <Button
        android:id="@+id/button_view_meeting_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_view_meeting_availability"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_invite_groups_to_meeting" />
</android.support.constraint.ConstraintLayout>